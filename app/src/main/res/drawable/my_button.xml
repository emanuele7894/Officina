<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="#4A4E4D" />
            <gradient android:angle="-90" android:startColor="#414242" android:endColor="#646868"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="#747575" />
            <solid android:color="#828584"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="1dip" android:color="#6B6B6B" />
            <gradient android:angle="-90" android:startColor="#C7424444" android:endColor="#3C3F3E" />
        </shape>
    </item>
</selector>