<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Preventivo" android:background="@color/colorSfondo">
    <TextView
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:id="@+id/textView29" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/colorAccent"/>
    <TextView
            android:text="Controllo"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:id="@+id/TitoloPreventivo"
            app:layout_constraintTop_toTopOf="parent" android:gravity="center"
            android:textColor="@color/colorPrimaryDark" android:fontFamily="@font/allerta" android:textSize="24sp"
            android:textAlignment="center"
            app:layout_constraintStart_toEndOf="@+id/buttonBack" android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" app:layout_constraintEnd_toStartOf="@+id/printButton"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="10dp"/>
    <TextView
            android:text="Targa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/targaTitP"
            android:fontFamily="@font/heebo_bold" android:textColor="@android:color/background_light"
            app:layout_constraintStart_toEndOf="@+id/buttonBack" android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp" app:layout_constraintEnd_toEndOf="@+id/TitoloPreventivo"
            android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/TitoloPreventivo"/>
    <ImageButton
            android:src="@drawable/ic_share_black_24dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/mailButton" android:scaleType="fitXY"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <ImageButton
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/buttonBack" android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/imageView4" android:layout_marginTop="22dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageButton
            android:src="@drawable/ic_print_black_24dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/printButton" android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toStartOf="@+id/mailButton"/>
    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/textView29" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/scrollView3">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"/>
    </ScrollView>
    <include android:layout_width="0dp" android:layout_height="0dp" layout="@layout/content_controllo"
             app:layout_constraintTop_toTopOf="@+id/scrollView3" app:layout_constraintStart_toStartOf="@+id/scrollView3"
             app:layout_constraintEnd_toEndOf="@+id/scrollView3"
             app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/content_controllo_print"/>
    <include android:layout_width="0dp" android:layout_height="0dp" layout="@layout/content_controllo2"
             app:layout_constraintTop_toTopOf="@+id/scrollView3" app:layout_constraintStart_toStartOf="@+id/scrollView3"
             app:layout_constraintEnd_toEndOf="@+id/scrollView3"
             app:layout_constraintBottom_toBottomOf="parent" android:id="@+id/content_controllo_print2"
             android:visibility="invisible"/>
    <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp" app:srcCompat="@mipmap/pic_62"
            android:id="@+id/prevPage" android:scaleType="fitXY"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toTopOf="@+id/content_controllo_print2"
            app:layout_constraintStart_toEndOf="@+id/TitoloPreventivo"
            app:layout_constraintEnd_toEndOf="@+id/printButton" android:layout_marginBottom="10dp"
            android:visibility="invisible"/>
    <ImageButton
            android:layout_width="25dp"
            android:layout_height="25dp" app:srcCompat="@mipmap/pic_59"
            android:id="@+id/nextPage" android:scaleType="fitXY"
            android:background="@android:color/transparent"
            app:layout_constraintBottom_toTopOf="@+id/content_controllo_print2"
            app:layout_constraintEnd_toEndOf="@+id/mailButton" app:layout_constraintStart_toStartOf="@+id/mailButton"
            android:layout_marginBottom="10dp"/>
    <TextView
            android:text="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numPage"
            app:layout_constraintBottom_toTopOf="@+id/content_controllo_print2"
            app:layout_constraintStart_toEndOf="@+id/prevPage"
            app:layout_constraintEnd_toStartOf="@+id/nextPage" android:layout_marginBottom="10dp"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed" android:textSize="20sp"/>

</android.support.constraint.ConstraintLayout>