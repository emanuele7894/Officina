<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".interventi_view" android:background="@color/colorSfondo">

    <TextView
            android:text="Interventi per :"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:id="@+id/titolo" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/allerta" android:textSize="24sp" android:textColor="@color/colorPrimaryDark"
            android:textAlignment="center" android:gravity="center_horizontal|center_vertical"
            android:background="@color/colorAccent"/>
    <TextView
            android:text="Targa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/targaTit" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/titolo"
            android:fontFamily="@font/allerta" android:textColor="@android:color/background_light"/>
    <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp" app:srcCompat="@mipmap/pic_62"
            android:id="@+id/buttonBack" android:scaleType="fitXY"
            android:layout_marginTop="20dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent" android:background="@android:color/transparent"/>
    <ImageButton
            android:src="@mipmap/pic_107"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/buttonSave" android:scaleType="fitXY"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="10dp" android:layout_marginTop="20dp"/>
    <TextView
            android:text="Nuovo"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/textSave"
            android:textColor="@color/colorPrimaryDark"
            app:layout_constraintStart_toStartOf="@+id/buttonSave"
            app:layout_constraintEnd_toEndOf="@+id/buttonSave"
            app:layout_constraintHorizontal_bias="0.363"
            app:layout_constraintTop_toTopOf="@+id/buttonSave" android:layout_marginTop="35dp"/>
    <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp" app:srcCompat="@mipmap/pic_11"
            android:id="@+id/imageView8"
            app:layout_constraintTop_toBottomOf="@+id/titolo"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="25dp"/>
    <TextView
            android:text=" Data intervento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView18" app:layout_constraintStart_toEndOf="@+id/imageView8"
            app:layout_constraintTop_toBottomOf="@+id/titolo" android:fontFamily="@font/caudex"
            android:textColor="@color/colorPrimaryDark" android:textSize="20sp" android:layout_marginTop="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="datetime"
            android:ems="10"
            android:id="@+id/editTextData"
            app:layout_constraintTop_toBottomOf="@+id/textView18" app:layout_constraintStart_toEndOf="@+id/imageView8"
            app:layout_constraintEnd_toEndOf="parent" android:fontFamily="@font/caudex"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed" android:textSize="24sp"
            android:layout_marginEnd="8dp" android:background="@color/color2"/>
    <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp" app:srcCompat="@mipmap/pic_26"
            android:id="@+id/imageView9" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextData" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Tipo intervento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView19" app:layout_constraintStart_toEndOf="@+id/imageView9"
            app:layout_constraintTop_toBottomOf="@+id/editTextData" android:textSize="20sp"
            android:fontFamily="@font/caudex" android:textColor="@color/colorPrimaryDark"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName|textCapCharacters"
            android:ems="10"
            android:id="@+id/editTextTipo"
            app:layout_constraintTop_toBottomOf="@+id/textView19" app:layout_constraintStart_toEndOf="@+id/imageView9"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:fontFamily="@font/caudex"
            android:textSize="24sp" android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:background="@color/color2"/>
    <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp" app:srcCompat="@mipmap/pic_61"
            android:id="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/editTextTipo" android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Chilometri "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView20"
            app:layout_constraintTop_toBottomOf="@+id/editTextTipo" app:layout_constraintStart_toEndOf="@+id/imageView"
            android:fontFamily="@font/caudex" android:textColor="@color/colorPrimaryDark" android:textSize="20sp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextKm"
            app:layout_constraintTop_toBottomOf="@+id/textView20" app:layout_constraintStart_toEndOf="@+id/imageView"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:fontFamily="@font/caudex"
            android:textSize="24sp" android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:background="@color/color2"/>
    <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp" app:srcCompat="@mipmap/pic_39"
            android:id="@+id/imageView10" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextKm" app:layout_constraintStart_toStartOf="parent"
    />
    <TextView
            android:text="Prezzo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView21"
            app:layout_constraintTop_toBottomOf="@+id/editTextKm" app:layout_constraintStart_toEndOf="@+id/imageView10"
            android:fontFamily="@font/caudex" android:textSize="20sp" android:textColor="@color/colorPrimaryDark"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editTextPrezzo" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/imageView10"
            app:layout_constraintTop_toBottomOf="@+id/textView21" android:fontFamily="@font/caudex"
            android:textSize="24sp" android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:background="@color/color2" android:inputType="number"/>
    <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp" app:srcCompat="@mipmap/pic_26"
            android:id="@+id/imageButton2" android:scaleType="fitCenter"
            android:background="@android:color/transparent" android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextPrezzo" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Descrizione"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView22"
            app:layout_constraintTop_toBottomOf="@+id/editTextPrezzo" app:layout_constraintStart_toEndOf="@+id/imageButton2"
            android:textSize="20sp" android:textColor="@color/colorPrimaryDark" android:fontFamily="@font/caudex"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/editTextDescr" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/imageButton2"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView22"
            android:fontFamily="@font/caudex" android:textSize="20sp"
            android:textColor="@color/common_google_signin_btn_text_dark_default" android:background="@color/color2"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/buttonControllo"/>
    <ImageButton
            android:layout_width="0dp"
            android:layout_height="45dp" app:srcCompat="@mipmap/pic_29"
            android:id="@+id/buttonPreventivo" android:scaleType="fitCenter"
            android:layout_marginBottom="30dp" app:layout_constraintBottom_toBottomOf="parent"
            android:background="@drawable/my_button"
            app:layout_constraintStart_toStartOf="@+id/textView23" app:layout_constraintEnd_toEndOf="@+id/textView23"/>
    <ImageButton
            android:layout_width="0dp"
            android:layout_height="45dp" app:srcCompat="@mipmap/pic_28"
            android:id="@+id/buttonControllo"
            android:scaleType="fitCenter" android:background="@drawable/my_button"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="30dp"
            app:layout_constraintStart_toStartOf="@+id/textView24" app:layout_constraintEnd_toEndOf="@+id/textView24"/>
    <ImageButton
            android:layout_width="0dp"
            android:layout_height="45dp" app:srcCompat="@mipmap/pic_58"
            android:id="@+id/buttonTagliando" android:scaleType="fitCenter"
            android:background="@drawable/my_button"
            app:layout_constraintStart_toStartOf="@+id/textView25"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toBottomOf="@+id/textView24"
            app:layout_constraintEnd_toEndOf="@+id/textView25"/>
    <TextView
            android:text="Preventivo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView23"
            android:textColor="@color/colorPrimaryDark" android:fontFamily="@font/caudex" android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/buttonPreventivo"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Controllo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView24"
            android:textColor="@color/colorPrimaryDark" android:fontFamily="@font/caudex" android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/buttonControllo"
            app:layout_constraintStart_toStartOf="@+id/textView26" app:layout_constraintEnd_toEndOf="@+id/textView26"/>
    <TextView
            android:text="Tagliando"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView25"
            android:textColor="@color/colorPrimaryDark" android:fontFamily="@font/caudex" android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonTagliando"/>
    <Spinner
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:id="@+id/spinnerInterv" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/titolo" android:layout_marginStart="80dp"
            android:layout_marginEnd="80dp" android:layout_marginTop="5dp" android:spinnerMode="dropdown"/>
    <TextView
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:id="@+id/textView26" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/titolo" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:visibility="invisible"/>


</android.support.constraint.ConstraintLayout>